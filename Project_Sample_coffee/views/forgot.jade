form( name='userInfo', novalidate='',class='marginVert')
  div(ng-controller="forgotController")
    div(class='panel panel-primary Panelmargin panelSize') 
      div(class='panel-heading')
        h3(class='panel-title') forgot password
      div(class='panel-body')
        div(class='row rowHeight paddingLeftDiv')
          div(class='col-md-2 PaddingRightControl')
            span(class='floatRight') Email:
          div(class='col-md-10 paddingLeftDiv paddingRightDiv')
            div(class='widthControl input-group')
              input(type='text' ng-model='emailModel' required  class='form-control' placeholder="your Id"  aria-describedby="email")
              span(class='input-group-addon '  id='email' ) @house.com
        div(class='row paddingLeftDiv rowHeight')
          button(class='btn regbtn widthControl' ng-click='signin()' ng-disabled='userInfo.$invalid && !userInfo.$untouched') send recovery E-mail 

